{
  "introduction": {
    "description": "In German, the choice between Nominativ, Akkusativ, and Dativ depends on the role a noun plays in a sentence. Each case answers specific questions. By understanding these roles and knowing which verbs and prepositions trigger which case, you can determine the correct case more easily.",
    "general_guidelines": [
      "Nominativ: Identifies the subject (the doer or the main focus of the sentence).",
      "Akkusativ: Identifies the direct object (the person or thing directly affected by the verb’s action).",
      "Dativ: Identifies the indirect object (to/for whom the action is done)."
    ],
    "key_questions": [
      { "case": "Nominativ", "questions": ["Wer? (Who?)", "Was? (What?)"] },
      { "case": "Akkusativ", "questions": ["Wen? (Whom?)", "Was? (What?)"] },
      { "case": "Dativ", "questions": ["Wem? (To whom?)", "Für wen? (For whom?)"] }
    ],
    "quick_substitutions": [
      { "case": "Nominativ", "tip": "Replace the noun with 'er' (he). If it still makes sense, it's nominativ." },
      { "case": "Akkusativ", "tip": "Replace the noun with 'ihn' (him). If it still makes sense, it's akkusativ." },
      { "case": "Dativ", "tip": "Replace the noun with 'ihm' (to him). If it still makes sense, it's dativ." }
    ]
  },
  "cases": {
    "nominativ": {
      "name": "Nominativ",
      "definition": "The case used for the subject of the sentence - the person or thing performing the action or being described.",
      "usage": [
        "Use nominativ for the subject of a sentence.",
        "Used after linking verbs (Kopulaverben) that connect the subject to a noun or adjective complement, such as 'sein', 'werden', 'bleiben', 'heißen', 'scheinen', 'wirken' (in the sense of 'to appear/seem')."
      ],
      "common_triggers": {
        "verbs": [
          { "verb": "sein", "meaning": "to be" },
          { "verb": "werden", "meaning": "to become" },
          { "verb": "bleiben", "meaning": "to stay" },
          { "verb": "heißen", "meaning": "to be called" },
          { "verb": "scheinen", "meaning": "to seem, to appear" },
          { "verb": "wirken", "meaning": "to appear/seem (as in giving an impression)" }
        ],
        "prepositions": []
      },
      "examples": [
        {
          "german": "Der Hund bellt.",
          "english": "The dog barks.",
          "explanation": "The dog is the subject performing the action."
        },
        {
          "german": "Das ist ein Apfel.",
          "english": "That is an apple.",
          "explanation": "'sein' links subject to a nominative complement."
        },
        {
          "german": "Ich heiße Julia.",
          "english": "I am called Julia.",
          "explanation": "After 'heißen', the name is also nominativ."
        }
      ]
    },
    "akkusativ": {
