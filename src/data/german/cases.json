  "memory_aids": {
    "logic": [
      "Nominativ: Who/What does something? (Subject)",
      "Akkusativ: Who/What is directly affected by the action? (Direct Object)",
      "Dativ: Who/What receives or benefits indirectly from the action? (Indirect Object)"
    ],
    "quick_tests": [
