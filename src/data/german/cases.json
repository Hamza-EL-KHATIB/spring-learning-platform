            },
            {
              "case": "Dativ",
              "german": "Ich helfe dem System",
              "english": "I help the system"
            }
          ]
        },
        "development": {
          "title": "Development Examples",
          "examples": [
            {
              "case": "Nominativ",
              "german": "Die Funktion läuft",
              "english": "The function runs"
            },
            {
              "case": "Akkusativ",
              "german": "Ich schreibe die Funktion",
              "english": "I write the function"
            },
            {
              "case": "Dativ",
              "german": "Ich gebe der Funktion Parameter",
