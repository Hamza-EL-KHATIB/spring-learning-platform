  "title": "Negativartikel (Negative Articles)",
  "level": "A1",
  "type": "grammar",
  "description": "Negative articles (kein, keine) are used to negate nouns in German. They function as the opposite of both definite and indefinite articles and follow similar declension patterns.",

  "structure": {
    "explanation": "Negative articles negate nouns and follow declension patterns like indefinite articles",
    "formation": "Articles are chosen based on the noun's gender and modified according to case",
    "usage": "Used to negate nouns with indefinite articles or nouns without articles"
  },

  "tables": [
    {
      "title": "Complete Case Table",
      "description": "Negative articles across all cases and genders",
      "headers": ["Case", "Masculine", "Feminine", "Neuter", "Plural"],
      "rows": [
        {
          "case": "Nominativ",
          "masculine": "kein",
          "feminine": "keine",
          "neuter": "kein",
          "plural": "keine"
        },
        {
          "case": "Akkusativ",
          "masculine": "keinen",
          "feminine": "keine",
          "neuter": "kein",
          "plural": "keine"
        },
        {
          "case": "Dativ",
          "masculine": "keinem",
          "feminine": "keiner",
          "neuter": "keinem",
          "plural": "keinen"
        }
      ]
    }
  ],

  "rules": [
    {
      "rule": "Negating Nouns with Indefinite Articles",
      "explanation": "Replace ein/eine with kein/keine",
      "examples": [
        {
          "german": "Ich habe ein Buch → Ich habe kein Buch",
          "english": "I have a book → I don't have a book"
        },
        {
          "german": "Das ist eine Katze → Das ist keine Katze",
          "english": "That is a cat → That is not a cat"
        }
      ]
    },
    {
      "rule": "Negating Nouns without Articles",
      "explanation": "Add kein/keine to negate nouns that normally have no article",
      "examples": [
        {
          "german": "Ich habe Zeit → Ich habe keine Zeit",
          "english": "I have time → I have no time"
        },
        {
          "german": "Er hat Geld → Er hat kein Geld",
          "english": "He has money → He has no money"
        }
      ]
    }
  ],

  "patterns": [
    {
      "pattern": "Use kein",
      "usage": "With countable and uncountable nouns",
      "examples": [
        {
          "german": "Ich habe kein Auto",
          "english": "I don't have a car"
        },
        {
          "german": "Ich habe kein Geld",
          "english": "I don't have any money"
        }
      ]
    },
    {
      "pattern": "Use nicht",
      "usage": "With definite articles",
      "examples": [
        {
          "german": "Ich mag nicht den Film",
          "english": "I don't like the film"
        },
        {
          "german": "Er liest nicht das Buch",
          "english": "He doesn't read the book"
        }
      ]
    }
  ],

  "commonMistakes": [
    {
      "mistake": "Using 'nicht ein'",
      "correction": "Use 'kein' instead",
      "examples": {
        "wrong": "Ich habe nicht ein Buch",
        "correct": "Ich habe kein Buch",
        "explanation": "Use kein for negating nouns with indefinite articles"
      }
    },
    {
      "mistake": "Case changes",
      "correction": "Remember masculine changes in accusative",
      "examples": {
        "wrong": "Ich sehe kein Mann",
        "correct": "Ich sehe keinen Mann",
        "explanation": "Masculine nouns need 'keinen' in accusative case"
      }
    }
  ],

