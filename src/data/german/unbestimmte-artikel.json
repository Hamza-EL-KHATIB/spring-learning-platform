  "rules": [
    {
      "rule": "First Mention",
      "explanation": "Use indefinite articles when mentioning something for the first time",
      "examples": [
        {
          "german": "Ich sehe einen Hund.",
          "english": "I see a dog."
        },
        {
          "german": "Das ist eine Katze.",
          "english": "That is a cat."
        }
      ]
    },
    {
      "rule": "Non-specific Items",
      "explanation": "Use for items that aren't specific or defined",
      "examples": [
        {
          "german": "Ich brauche ein Buch.",
          "english": "I need a book."
        },
        {
          "german": "Er kauft eine Zeitung.",
          "english": "He buys a newspaper."
        }
      ]
    }
  ],

  "specialCases": [
    {
      "case": "No Plural Form",
      "explanation": "There is no plural indefinite article in German. Use no article or some/any (einige, manche)",
      "examples": [
        {
          "german": "Ich habe Bücher.",
          "english": "I have books."
        }
      ]
    },
    {
      "case": "Professions without Modifiers",
      "explanation": "Don't use articles with professions when there are no additional descriptors",
      "examples": [
        {
          "german": "Ich bin Lehrer.",
          "english": "I am a teacher."
        },
        {
          "german": "Sie ist Studentin.",
          "english": "She is a student."
        }
      ]
    }
  ],

