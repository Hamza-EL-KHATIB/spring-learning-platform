  "rules": [
    {
      "rule": "Specific Known Objects",
      "explanation": "Use definite articles for previously mentioned or known objects",
      "examples": [
        {
          "german": "Der Tisch ist neu.",
          "english": "The table is new."
        },
        {
          "german": "Die Katze schläft.",
          "english": "The cat is sleeping."
        }
      ]
    },
    {
      "rule": "General Concepts",
      "explanation": "Use definite articles for general concepts or categories",
      "examples": [
        {
          "german": "Die Sonne scheint.",
          "english": "The sun shines."
        },
        {
          "german": "Der Mond ist hell.",
          "english": "The moon is bright."
        }
      ]
    }
  ],

  "specialCases": [
    {
      "case": "Names of Countries",
      "explanation": "Usually no article unless specified",
      "examples": [
        {
          "german": "Deutschland ist schön.",
          "english": "Germany is beautiful."
        }
      ]
    },
    {
      "case": "Names of Cities",
      "explanation": "Usually no article",
      "examples": [
        {
          "german": "Berlin ist eine große Stadt.",
          "english": "Berlin is a big city."
        }
      ]
    },
    {
      "case": "Languages",
      "explanation": "No article when speaking about them in general",
      "examples": [
        {
          "german": "Ich spreche Deutsch.",
          "english": "I speak German."
        }
      ]
    }
