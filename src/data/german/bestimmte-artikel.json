  "title": "Bestimmte Artikel (Definite Articles)",
  "level": "A1",
  "type": "grammar",
  "description": "Definite articles in German (der, die, das) are used when referring to specific objects or concepts. They change form based on gender, number, and case.",

  "structure": {
    "explanation": "Definite articles indicate specific or known objects and must agree with the noun's gender, number, and case.",
    "formation": "Articles are chosen based on the noun's gender and modified according to their grammatical case.",
    "usage": "Used for specific known objects, general concepts, and unique items"
  },

  "tables": [
    {
      "title": "Complete Case Table",
      "description": "Articles across all cases and genders",
      "headers": ["Case", "Masculine", "Feminine", "Neuter", "Plural"],
      "rows": [
        {
          "case": "Nominativ",
          "masculine": "der",
          "feminine": "die",
